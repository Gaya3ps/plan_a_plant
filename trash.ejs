    <script>
        document.addEventListener('DOMContentLoaded', function () {
    
            const updateProduct = async (productId, newQuantity) => {
                try {
                    console.log("\\\\\\",newQuantity);
                    const response = await fetch('/updateCart', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({ productId, newQuantity })
                    });
    
                    if (response.ok) {
                        location.reload(); // Reload the page after successful update
                    } else {
                        console.error('Failed to update product');
                        // Handle error response if needed
                    }
                } catch (error) {
                    console.error(error);
                }
            };
    
            document.querySelectorAll('.increase-quantity').forEach(button => {
                button.addEventListener('click', async function () {
                    const $product = this.closest('.product');
                    const productId = $product.dataset.productId;
    
                    if (productId) {
                        let quantity = parseInt($product.querySelector('.product-quantity').textContent);
                        quantity++;
                        $product.querySelector('.product-quantity').textContent = quantity;
                        console.log(quantity);
                        await updateProduct(productId, quantity);
                    }
                });
            });
    
            document.querySelectorAll('.decrease-quantity').forEach(button => {
                button.addEventListener('click', async function () {
                    const $product = this.closest('.product');
                    const productId = $product.dataset.productId;
    
                    if (productId) {
                        let quantity = parseInt($product.querySelector('.product-quantity').textContent);
                        if (quantity > 1) {
                            quantity--;
                            $product.querySelector('.product-quantity').textContent = quantity;
                            console.log(quantity);
                            await updateProduct(productId, quantity);
                        }
                    }
                });
            });
        });
    </script>
    

