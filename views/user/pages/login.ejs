<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login Form</title>
  <style>
    /* Your existing styles remain unchanged */
  </style>
</head>
<body>
  <!-- Main Navigation -->
  <header>
    <!-- Background image -->
    <style>
      #intro {
        background-image: url(https://mdbootstrap.com/img/new/fluid/city/008.jpg);
        height: 100vh;
      }
    </style>
    
    <div id="intro" class="bg-image shadow-2-strong" >
      <div class="mask d-flex align-items-center h-100" style="background-color: rgba(0, 0, 0, 0.8);">
        <div class="container">
          <div class="row justify-content-center">
            <div class="col-xl-5 col-md-8">
              <form class="bg-white rounded-5 shadow-5-strong p-5" action="/login" method="post" onsubmit="return validateForm()">
                <% if (errorMessage) { %>
                  <p class="alert alert-danger"><%= errorMessage %></p>
                <% } %>
                <!-- Email input -->
                <div class="form-outline mb-4">
                  <label class="form-label" for="form1Example1">Email address</label>
                  <input type="email" id="form1Example1" class="form-control" name="email" />
                  <span id="emailError" style="color: red;"></span>
                </div>

                <!-- Password input -->
                <div class="form-outline mb-4">
                  <label class="form-label" for="form1Example2">Password</label>
                  <input type="password" id="form1Example2" class="form-control" name="password" />
                  <span id="passwordError" style="color: red;"></span>
                </div>

                <!-- 2 column grid layout for inline styling -->
                <div class="row mb-4">
                  <div class="col d-flex justify-content-center">
                    <!-- Checkbox -->
                    <div class="form-check">
                      <input class="form-check-input" type="checkbox" value="" id="form1Example3" checked />
                      <label class="form-check-label" for="form1Example3">
                        Remember me
                      </label>
                    </div>
                  </div>

                  <div class="col text-center">
                    <!-- Simple link -->
                    <a href="/forget">Forgot password?</a>
                  </div>
                </div>

                <!-- Submit button -->
                <button type="submit" class="btn btn-primary btn-block">Sign in</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- Background image -->
  </header>
  <!-- Main Navigation -->

  <!-- JavaScript for form validation -->
  <script>
    function validateForm() {
      var email = document.getElementById('form1Example1').value;
      var password = document.getElementById('form1Example2').value;

      // Clear previous error messages
      document.getElementById('emailError').innerHTML = '';
      document.getElementById('passwordError').innerHTML = '';

      // Check if email is empty and is a valid email format
      if (email.trim() === '' || !validateEmail(email)) {
        document.getElementById('emailError').innerHTML = 'Please enter a valid email address';
        return false;
      }

      // Check if password is empty
      if (password.trim() === '') {
        document.getElementById('passwordError').innerHTML = 'Password cannot be empty';
        return false;
      }

      // If all validations pass, allow the form to submit
      return true;
    }

    // Function to validate email format using a simple regular expression
    function validateEmail(email) {
      var re = /\S+@\S+\.\S+/;
      return re.test(email);
    }
  </script>
</body>
</html>


  

  