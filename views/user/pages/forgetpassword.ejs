    background-color: #fff;
    border-radius: 5px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    overflow: hidden;
}

.padding_eight_all {
    padding: 8px;
}

.bg-white {
    background-color: #fff;
}

.heading_s1 h3 {
    font-size: 24px;
    margin-bottom: 30px;
}

